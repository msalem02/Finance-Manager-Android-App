<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewCategoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/category_name_placeholder"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/buttonEditCategory"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_edit"
        app:tint="@color/purple_700"
        android:background="@android:color/transparent"
        android:contentDescription="@string/category_edit_desc" />

    <ImageButton
        android:id="@+id/buttonDeleteCategory"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_delete"
        app:tint="@color/purple_700"
        android:background="@android:color/transparent"
        android:contentDescription="@string/category_delete_desc" />

</LinearLayout>
