<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_card_rounded"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expense_add_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700" />

        <EditText
            android:id="@+id/editTextExpenseAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="12dp"
            android:hint="@string/expense_amount_hint"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:background="@drawable/bg_input_rounded"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />

        <TextView
            android:id="@+id/textViewExpenseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="10dp"
            android:text="@string/expense_date_hint"
            android:background="@drawable/bg_input_rounded"
            android:textColor="@color/text_secondary" />

        <Spinner
            android:id="@+id/spinnerExpenseCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/editTextExpenseDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="12dp"
            android:hint="@string/expense_description_hint"
            android:padding="10dp"
            android:background="@drawable/bg_input_rounded"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />

        <Button
            android:id="@+id/buttonAddExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/expense_add_button"
            android:textAllCaps="false"
            android:backgroundTint="@color/purple_700"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewExpense"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:background="@color/card_background" />

</LinearLayout>
