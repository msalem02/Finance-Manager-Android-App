<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_card_rounded"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_subtitle"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_email_label"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:labelFor="@+id/textViewProfileEmail"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/textViewProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/bg_input_rounded"
                android:textColor="@color/text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_first_name_label"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:labelFor="@+id/editTextProfileFirstName"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/editTextProfileFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/bg_input_rounded"
                android:padding="8dp"
                android:hint="@string/profile_first_name_hint"
                android:inputType="textPersonName"
                android:importantForAutofill="yes"
                android:autofillHints="name"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_last_name_label"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:labelFor="@+id/editTextProfileLastName"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/editTextProfileLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/bg_input_rounded"
                android:padding="8dp"
                android:hint="@string/profile_last_name_hint"
                android:inputType="textPersonName"
                android:importantForAutofill="yes"
                android:autofillHints="name"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_new_password_label"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:labelFor="@+id/editTextProfilePassword"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/editTextProfilePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/bg_input_rounded"
                android:padding="8dp"
                android:hint="@string/profile_new_password_hint"
                android:inputType="textPassword"
                android:importantForAutofill="yes"
                android:autofillHints="password"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_confirm_password_label"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:labelFor="@+id/editTextProfileConfirmPassword"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/editTextProfileConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/bg_input_rounded"
                android:padding="8dp"
                android:hint="@string/profile_confirm_password_hint"
                android:inputType="textPassword"
                android:importantForAutofill="yes"
                android:autofillHints="password"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint" />

            <Button
                android:id="@+id/buttonSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_save_button"
                android:textAllCaps="false"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/purple_700"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
