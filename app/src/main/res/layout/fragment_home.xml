<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_card_rounded"
            android:elevation="2dp">

            <TextView
                android:id="@+id/textViewPeriodLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_this_month"
                android:textSize="16sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/textViewTotalIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_income_zero"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF1E88E5"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textViewTotalExpenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_expenses_zero"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFE53935"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textViewBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_balance_zero"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/buttonDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_700"
                android:text="@string/home_day"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonWeek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/purple_700"
                android:text="@string/home_week"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/purple_700"
                android:text="@string/home_month"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/purple_700"
                android:text="@string/home_year"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="16dp"
            android:background="@drawable/bg_card_rounded"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_custom_period_title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_custom_period_subtitle"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textViewCustomFrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:background="@drawable/bg_input_rounded"
                    android:text="@string/home_from_date"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/textViewCustomTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:padding="8dp"
                    android:background="@drawable/bg_input_rounded"
                    android:text="@string/home_to_date"
                    android:textColor="@color/text_primary" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonApplyCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_700"
                android:text="@string/home_apply_custom"
                android:textAllCaps="false"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="16dp"
            android:background="@drawable/bg_card_rounded"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_expenses_by_category"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/textViewCategoryBreakdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/home_no_data_yet"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
